@inject SessionAccess Session

<ul class="navbar-right navbar-nav">
    @if (Session.IsSignedIn())
    {
        <form class="form-inline" asp-controller="Account" asp-action="LogOut">
            @* TODO: This text is displayed above the logout button. It should be to the left. *@
            Hello <b id="login-friendly">@Html.Encode(Session.Session.GetString("AuthenticatedUserFriendly"))</b>.
            <button type="submit" class="nav-link btn btn-link text-dark">Log Out</button>
        </form>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Signup">Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="SignIn">Sign In</a>
        </li>
    }
</ul>
